{
  "description": "ATDD workflow guardrails: warn when writing code without specs, remind about dual test streams on completion",
  "hooks": {
    "BeforeTool": [
      {
        "matcher": "write_file|replace.*",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${extensionPath}/hooks/scripts/check-specs-exist.sh",
            "timeout": 10000
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${extensionPath}/hooks/scripts/stop-reminder.sh",
            "timeout": 10000
          }
        ]
      }
    ]
  }
}
